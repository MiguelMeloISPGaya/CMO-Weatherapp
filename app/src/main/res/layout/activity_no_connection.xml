<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="pt.ispg3814.com.weatherapp.NoConnectionActivity">

    <ImageView
        android:id="@+id/logo_no_connection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:src="@drawable/ic_noconnection"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Sem acesso á rede. Ative o acesso á rede para utilizar a aplicação."
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="18sp" />


</LinearLayout>
